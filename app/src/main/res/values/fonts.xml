<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="text_size_headline">24sp</dimen>
    <!-- Regular -->
    <dimen name="text_size_title">20sp</dimen>
    <!-- Medium -->
    <dimen name="text_size_subhead">16sp</dimen>
    <!-- Regular -->
    <dimen name="text_size_body_two">14sp</dimen>
    <!-- Medium -->
    <dimen name="text_size_body">14sp</dimen>
    <!-- Regular -->
    <dimen name="text_size_caption">12sp</dimen>
    <!-- Regular -->
    <dimen name="text_size_button">14sp</dimen>
    <!-- Medium -->

    <style name="Text" />

    <style name="Text.Base">
        <item name="android:textColor">@color/text_primary_white</item>
    </style>

    <style name="Text.Base.Headline">
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Text.Base.Title">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text.Base.Subhead">
        <item name="android:textSize">@dimen/text_size_subhead</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Text.Base.Body">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Text.Base.Body.Two">
        <item name="android:textSize">@dimen/text_size_body_two</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text.Base.Caption">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textColor">@color/text_secondary_white</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Text.Base.Button">
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources>